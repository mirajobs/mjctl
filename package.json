{
  "name": "mjctl",
  "version": "0.1.1",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/mirajobs/mjctl.git"
  },
  "bugs": {
    "url": "https://github.com/mirajobs/mjctl/issues"
  },
  "homepage": "https://github.com/mirajobs/mjctl#readme",
  "bin": {
    "mjctl": "bin/mjctl"
  },
  "files": [
    "dist/",
    "bin/",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "clean": "rimraf dist",
    "build": "npm run clean && esbuild src/main.ts --bundle --platform=node --format=cjs --outfile=dist/main.cjs --sourcemap",
    "prepublishOnly": "npm run typecheck && npm test && npm run build",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "dev": "tsx src/main.ts",
    "test": "vitest run",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix"
  },
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "commander": "^12.1.0",
    "dotenv": "^16.4.5",
    "pdfjs-dist": "^4.10.38",
    "prompts": "^2.4.2",
    "yaml": "^2.5.1"
  },
  "devDependencies": {
    "@types/node": "^22.7.7",
    "@types/prompts": "^2.4.9",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "esbuild": "^0.24.0",
    "eslint": "^9.38.0",
    "eslint-config-prettier": "^10.1.8",
    "rimraf": "^6.0.1",
    "tsx": "^4.19.1",
    "typescript": "^5.6.3",
    "vitest": "^2.1.4"
  }
}
